<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OrderController">
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" AnchorPane.leftAnchor="0.0"
         AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
      </padding>
      <HBox spacing="20.0">
         <Label alignment="TOP_LEFT" prefWidth="50.0" text="Name"/>
         <TextField fx:id="textFieldName" prefWidth="200.0"/>
      </HBox>
      <HBox spacing="20.0">
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
         <Label alignment="TOP_LEFT" prefWidth="50.0" text="Food"/>
         <TextField fx:id="textFieldFood" prefWidth="200.0"/>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
         <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handlerAdd" text="Add"/>
         <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handlerCancel" text="Cancel"/>
      </HBox>
   </VBox>
</AnchorPane>
